.main-chat
 .main-header
  .main-header__left-box
   .main-header__left-box__current-group
    = @group.name
   .main-header__left-box__member-name
    Member:
    - @group.group_users.each do |group_user|
     .main-header__left-box__member-name__name
     = group_user.user.name
  .main-header__right-box__edit-btn
   = link_to edit_group_path(params[:group_id]), class:"RightBox__EditBtn" do
    = "Edit"
 .main-messages
  = render @messages
 .form
  = form_for [@group, @message], html: { class: "new-message" } do |f|
   .input-box
    = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
    = f.label :image, class: 'input-box__image' do
     = icon('fas', 'image', class: 'input-box__image__icon')
     = f.file_field :image, class: 'input-box__image__file'
   = f.submit 'Send', class: 'submit-btn'